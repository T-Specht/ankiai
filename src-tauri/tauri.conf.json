{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "AnkiAI",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "startDragging": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true
      }
    },
    "windows": [
      {
        "title": "AnkiAI",
        "width": 800,
        "height": 600,
        "minHeight": 200,
        "minWidth": 300
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "io.specht.ankiai",
      "copyright": "Tim Specht",
      "publisher": "Tim Specht",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
